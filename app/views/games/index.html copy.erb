<% content_for :title, 'Games List' %>

<form id="g-search">

  <div class="form-group">
    <div class="col-xs-3">
      <input
        type="text"
        id="g-search-title"
        class="form-control  w-2"
        name="title"
        placeholder="Title or Barcode"
        value="<%= @searchTitle %>"
        autofocus
      />
    </div>
    <div class="col-xs-3">
      <input
        type="text"
        id="g-search-publisher"
        class="form-control col-md-4"
        name="publisher"
        placeholder="Publisher"
        value="<%= @searchPublisher %>"
      />
    </div>
    <div class="col-xs-3">
      <input type="submit" class="form-control" value="Search"/>
    </div>
  </div>

  <div class="col-xs-2">

  </div>
  <div class="col-xs-12">
    <div class="btn-group-toggle search-btn" data-toggle="buttons">
      <label class="btn btn-default <%= @searchValuable ? "active" : "" %>">
        <input
          type="checkbox"
          id="g-search-valuable"
          name="valuable"
          <%= @searchValuable ? "checked" : "" %>
        >
        Valuable?
      </label>
    </div>
    <div class="btn-group-toggle search-btn" data-toggle="buttons">
      <label class="btn btn-default <%= @searchChecked ? "active" : "" %>">
        <input
          type="checkbox"
          id="g-search-checked"
          name="checked"
          <%= @searchChecked ? "checked" : "" %>
        >
        Checked out?
      </label>
    </div>
    <div class="btn-group-toggle search-btn" data-toggle="buttons">
      <label class="btn btn-default <%= @searchLoaned ? "active" : "" %>">
        <input
          type="checkbox"
          id="g-search-loaned"
          name="loaned"
          <%= @searchLoaned ? "checked" : "" %>
        >
        Loaned out?
      </label>
    </div>
    <div
      style="display: <%= @searchLoaned ? "inline-block" : "none"%>;"
      id="g-search-group"
    >
      <label class="checkbox-inline">Loaned To:
      </label>
      <% options = options_from_collection_for_select(Group.active, 'id', 'name', @searchGroup) %>
      <%= select_tag(:group, options, { :prompt => 'Any Group' }) %>
    </div>
  </div>
</form>
<div id="games-table">
  <%= render 'table' %>
</div>
