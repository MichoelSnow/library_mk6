<% content_for :title, 'Checkout / Return' %>
<%= javascript_pack_tag 'checkouts' %>

<div class="row">
  <div class="col-3"></div>
  <div class="col-6 input-icons">
    <input
      type="text"
      id="g-barcode"
      class="form-control"
      placeholder="Enter GAME barcode to checkout or return."
      autofocus
    />
    <i class="bi bi-dice-3-fill"></i>
    <br/>
    <h3 id="g-name"></h3>
  </div>
  <div class="col-1">
    <input
      id="checkouts-x-btn"
      type="button"
      class="btn btn-secondary"
      style="display:none;"
      value="X"
    />
  </div>
  <div class="col-2"></div>
</div>
<br/>
<div class="row" id="a-row" style="display:none;">
  <div class="col-3"></div>
  <div class="col-6 input-icons">
    <input
      type="text"
      id="a-barcode"
      class="form-control"
      placeholder="Enter ATTENDEE's barcode to checkout game."
    />
    <i class="bi bi-person-fill"></i>
  </div>
  <div class="col-1"></div>
  <div class="col-2"></div>
</div>

<div
  class="modal fade"
  id="a-form"
  role="dialog"
  aria-hidden="true"
  data-backdrop="static"
  data-keyboard="false"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4>New Attendee</h4>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="mb-3">
            <input
              type="text"
              class="form-control"
              name="first_name"
              placeholder="First Name"
            >
          </div>
          <div class="mb-3">
            <input
              type="text"
              class="form-control"
              name="last_name"
              placeholder="Last Name"
            >
          </div>
          <div class="mb-3">
            <input
              type="text"
              class="form-control"
              name="id_state"
              placeholder="State of License/State ID, Ex: WA, TX, MA (Optional)"
            >
          </div>
          <div class="mb-3">
            <input
              type="text"
              class="form-control"
              name="handle"
              placeholder="Handle/Nickname if Volunteer (Optional)"
            >
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-outline-secondary" id="a-form-cancel">Cancel</button>
        <button class="btn btn-primary" id="a-form-save">Save and Continue</button>
      </div>
    </div>
  </div>
</div>

